.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-author-date text {
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 26rpx;
  vertical-align: middle;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}

.post-image {
  width: 750rpx;
  height: 340rpx;
  margin-left: 16px;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 20rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like image {
  width: 16px;
  height: 16px;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-like text {
  vertical-align: middle;
  margin-right: 20px;
}