<!-- posts.wxml -->
<view>
  <swiper indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}'>
    <swiper-item wx:for="{{images}}" wx:key>
      <image src="{{item.src}}"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{post_key}}" wx:key>
    <view class='post-container'>
      <view class='post-author-date'>
        <image src='{{item.img.author_img}}'></image>
        <text>{{item.date}}</text>
      </view>
      <text class='post-title'>{{item.title}}</text>
      <image class='post-image' src='{{item.img.post_img}}'></image>
      <text class='post-content'>{{item.content}}</text>
      <view class='post-like'>
        <image src='/images/icon/chat.png'></image>
        <text>{{item.collect_num}}</text>
        <image src='/images/icon/view.png'></image>
        <text>{{item.view_num}}</text>
      </view>
    </view>
  </block>
</view>